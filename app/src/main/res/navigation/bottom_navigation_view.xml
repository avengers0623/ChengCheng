<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_navigation_view"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="kr.ac.ansan.chengcheng.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_add"
            app:destination="@id/add"
            app:enterAnim="@android:anim/slide_out_right"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/add"
        android:name="kr.ac.ansan.chengcheng.AddFragment"
        android:label="fragment_add"
        tools:layout="@layout/add_item"/>

    <fragment
        android:id="@+id/mypage"
        android:name="kr.ac.ansan.chengcheng.MyPageFragment"
        android:label="fragment_mypage"
        tools:layout="@layout/my_page"/>

</navigation>